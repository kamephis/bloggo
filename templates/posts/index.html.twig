{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="container mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 py-8">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-6">
            Latest Posts
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for post in posts %}
                <div class="bg-white p-6 rounded-lg shadow-md">
                    {% if post.image %}
                        <img src="{{ post.image }}" alt="{{ post.title }}" class="w-full h-48 object-cover mb-4 rounded-t-lg">
                    {% endif %}
                    <h2 class="text-2xl font-semibold mb-2">{{ post.title }}</h2>
                    <p class="text-gray-600 mb-4">{{ post.shortDescription }}</p>
                    <a href="#" class="text-indigo-600 hover:text-indigo-800">Read more &rarr;</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
